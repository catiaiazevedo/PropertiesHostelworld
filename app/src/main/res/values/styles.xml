<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LateralFieldStyle">
        <item name="android:background">@drawable/lateral_field_background</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SquareViewStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ConstraintLayoutStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:layout_margin">8dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/theme_darker</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SubtitleTextStyle" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:textColor">@color/theme_main</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SinceTextStyle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PriceTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
